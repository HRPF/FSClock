<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FSClock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/android_blue_light</item>
        <item name="colorPrimaryVariant">@color/android_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/android_blue</item>
        <item name="colorSecondaryVariant">@color/android_blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
